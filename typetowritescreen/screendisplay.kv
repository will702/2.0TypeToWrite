<ScreenDisplay>:
    name: 'screendisplay'
    ScrollView:

        MDGridLayout:
            cols: 3
            adaptive_height: True
            padding: dp(4), dp(4)
            spacing: dp(4)


            MyTile:
                source: "./bahan/bahan_1.jpg"
                text: "[size=26]Kertas 1[/size]\n[size=14]kertas-1.jpg[/size]"

            MyTile:
                source: "./bahan/bahan_2(1).jpg"
                text: "[size=26]Kertas 2[/size]\n[size=14]kertas-2.jpg[/size]"
                tile_text_color: app.theme_cls.accent_color

            MyTile:
                source: "./bahan/bahan_3.jpg"
                text: "[size=26][color=#ffffff]Kertas 3[/color][/size]\n[size=14]kertas-3.jpg[/size]"
                tile_text_color: app.theme_cls.accent_color

    MDGridLayout:
        cols: 3
        adaptive_height: True
        padding: dp(4), dp(4)
        spacing: dp(4)
        pos_hint:{'center_x': 0.5,'center_y':0.4}
        MyTile:
            source: "./bahan/bahan_4(3).jpg"
            text: "[size=26]Kertas 4[/size]\n[size=14]kertas-4.jpg[/size]"

        MyTile:
            source: "./bahan/bahan_5.jpg"
            text: "[size=26]Kertas 5[/size]\n[size=14]kertas-5.jpg[/size]"
            tile_text_color: app.theme_cls.accent_color
        MyTile:
            source: "./typetowritescreen/transparent_image.png"










    MDRaisedButton:
        text: "Back"
        pos_hint: {'center_x': 0.1}
        size_hint_x:None
        on_release: root.go_back()

<MyTile@SmartTileWithLabel>
    size_hint_y: None
    height: "240dp"




